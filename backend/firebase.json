{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "python312",
      "timeoutSeconds": 300,
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 7002
    },
    "ui": {
      "port": 4401,
      "enabled": true
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
