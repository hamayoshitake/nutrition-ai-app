{
  "functions": {
    "source": "backend/functions",
    "codebase": "default",
    "runtime": "python312",
    "timeoutSeconds": 300,
    "ignore": [
      "venv",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 7002
    },
    "ui": {
      "enabled": true,
      "port": 4401
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "backend/firestore.rules",
    "indexes": "backend/firestore.indexes.json"
  }
}