{
  "name": "nutrition-ai-app",
  "private": true,
  "scripts": {
    "build": "cd frontend && npm run build",
    "dev": "cd frontend && npm run dev",
    "start": "cd frontend && npm start",
    "emulators": "firebase emulators:start --export-on-exit=./emulator-data --import=./emulator-data",
    "emulators:clean": "firebase emulators:start",
    "emulators:reset": "rm -rf ./emulator-data && firebase emulators:start --export-on-exit=./emulator-data"
  },
  "workspaces": ["frontend"]
}